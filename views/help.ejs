    <body>

      <canvas height="600" width="1000" id="mycanvas">O seu browser n√£o suporta canvas</canvas>

      <script type="text/javascript" src="javascripts/view/DrawScreen.js"></script>

      <script>

        var page = 1;

        function showHelp(){
          if(page === 1){
            document.getElementById("help").src="images/setas.png";
          }else if(page === 2){
            document.getElementById("help").src="images/control.png";
          }else if(page === 3){
            document.getElementById("help").src="images/tela.png";
          }
        }

        function showPreviousHelp(){
          if(page>1){
            page -= 1;
            showHelp(page);
          }
        }

        function showNextHelp(){
          if(page<3){
            page += 1;
            showHelp(page);
          }
        }

        function start(){
            drawScreen(ctx, canvas.width, canvas.height);
        }

        var canvas = document.getElementById("mycanvas");
        var ctx = canvas.getContext("2d");

        start();

      </script>

      <img id="help" src="images/setas.png">

      <table cellpadding="10" style="top: 15%; left: 50%;">
