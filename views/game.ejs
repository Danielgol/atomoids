    <body>

        <form action="/submit" style="visibility: hidden;" method="post" id="form" name="formulario">
          <input type="text" name="date"><input type="text" name="points">
        </form>

        <script>

          var isPaused = false;

           window.onkeydown = keyPressed;
          function keyPressed(event){
          	  switch(event.keyCode){
      	         case 32:
                 if(document.getElementById("pauseButton").style.visibility==="visible"){
                    pause();
                 }

  	             break;
  	           }
  	      }

          function pause(){
              if(isPaused === false){
                isPaused = true;
                cleanScreen(ctx, canvas.width, canvas.height);
                document.getElementById("pauseScreen").style.visibility="visible";
                document.getElementById("pauseButton").style.visibility="hidden";
              }else{
                isPaused = false;
                document.getElementById("pauseScreen").style.visibility="hidden";
                setTimeout(function() {
                  isPaused = true;
                  countdown();
            		}, 10);
              }
          }

          function countdown(){

            ctx.beginPath();
            ctx.lineWidth = 2;
            ctx.moveTo((canvas.width/2)-10, (canvas.height/2)+180);
            ctx.lineTo((canvas.width/2)+20, (canvas.height/2)+180);
            ctx.lineTo((canvas.width/2)+20, (canvas.height/2)+210);
            ctx.lineTo((canvas.width/2)-10, (canvas.height/2)+210);
            ctx.lineTo((canvas.width/2)-10, (canvas.height/2)+180);
            ctx.strokeStyle = "white";
            ctx.stroke();

            ctx.clearRect((canvas.width/2)-10, (canvas.height/2)+180, 30, 30);

            ctx.fillStyle = "white";
            ctx.font = "20px Hyper";
            ctx.fillText("3", 500, 500);
            ctx.closePath();

            setTimeout(function() {
              isPaused = false;
              document.getElementById("pauseButton").style.visibility="visible";
        		}, 3000);

            setTimeout(function() {
              ctx.clearRect((canvas.width/2)-10, (canvas.height/2)+180, 30, 30);
              ctx.beginPath();
              ctx.fillStyle = "white";
              ctx.font = "20px Hyper";
              ctx.fillText("1", 500, 500);
              ctx.closePath();
        		}, 2000);

            setTimeout(function() {
              ctx.clearRect((canvas.width/2)-10, (canvas.height/2)+180, 30, 30);
              ctx.beginPath();
              ctx.fillStyle = "white";
              ctx.font = "20px Hyper";
              ctx.fillText("2", 500, 500);
              ctx.closePath();
        		}, 1000);

          }

          function goToIndex(){
            window.location.replace("/");
          }

          function restartGame(){
            window.location.replace("/game");
          }

        </script>

        <table style="top: 8%; left: 83%; visibility: hidden;" id="pauseButton">
          <tr><td><input type="button" value="||" onclick="pause()"></td></tr>
        </table>

        <table style=" top: 40%; visibility: hidden;" id="pauseScreen">
          <tr><td style="font-size: 35px; padding: 40px 0;">JOGO PAUSADO</td></tr>
          <tr><td><input type="button" style="font-size: 200%;" value="     Continuar     " onclick="pause()"></td></tr>
          <tr><td style="padding: 30px 0;"><input type="button" style="font-size: 200%;" value="     Reiniciar     " onclick="restartGame()"></td></tr>
          <tr><td><input type="button" style="font-size: 200%;" value="       Sair        " onclick="goToIndex()"></td></tr>
